<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Solicitud de Viaje"
              android:layout_marginVertical="20dp"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textSize="18sp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_location_grey"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Origen"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textViewOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calle falsa"
                        android:maxLines="2"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_my_location_grey"
                        android:layout_marginRight="15dp"
                       />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destino"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/textViewDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calle falsa"
                            android:maxLines="2"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingHorizontal="20dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/border">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_timer_grey"
                            android:layout_marginRight="15dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiempo y distancia"
                                android:textSize="13sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewTimeAndDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 mins - 0 km"
                                android:maxLines="2"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        >

        <Button
            android:id="@+id/bntAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ACEPTAR"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/bntCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/skyBlue"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>



</FrameLayout>